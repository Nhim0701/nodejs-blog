<div class="author">
    <h1 class="author__heading">
        Hi, I am Harinezumi.
    </h1>
    <p class="author__body">
        IT Communicator learning to become a devops
    </p>
</div>

<img src="/img/anya.jpg" alt="anya smile" class="anya-image" width="981" height="528">

<section class="article">
    <h2 class="article__heading">Latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(Post => { %>
            <li>
                <a href="/post/<%= Post._id %>">
                    <span><%= Post.title %></span>
                    <span class="Article-list__date"><%= Post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <% if (nextPage !==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts </a>
    <% } %>
</section>